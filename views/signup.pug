.container.d-flex.flex-column.justify-content-between.vh-100
  .row.justify-content-center.mt-5
    .col-xl-5.col-lg-6.col-md-10
      .card
        .card-header.bg-primary
          .app-brand
            a(href='/index.html')
              svg.brand-icon(xmlns='http://www.w3.org/2000/svg' preserveaspectratio='xMidYMid' width='30' height='33' viewbox='0 0 30 33')
                g(fill='none' fill-rule='evenodd')
                  path.logo-fill-blue(fill='#7DBCFF' d='M0 4v25l8 4V0zM22 4v25l8 4V0z')
                  path.logo-fill-white(fill='#FFF' d='M11 4v25l8 4V0z')
              span.brand-name Sleek Dashboard
        .card-body.p-5
          h4.text-dark.mb-5 Sign Up
          form(action='/submit-signup' method="POST")
            .row
              .form-group.col-md-12.mb-4
                input#email.form-control.input-lg(name='email' type='email' placeholder='Email')
              .form-group.col-md-12
                input#password.form-control.input-lg(name='password' type='password' placeholder='Password')
              .form-group.col-md-12
                input#cpassword.form-control.input-lg(name='confirm' type='password' placeholder='Confirm Password')
                if (error)
                  p#error(style='color:red;font-size:13') #Error: #{error}
              .col-md-12
                .d-inline-block.mr-3
                  label.control.control-checkbox
                    input(type='checkbox')
                    .control-indicator
                    |I Agree the terms and conditions
                button.btn.btn-lg.btn-primary.btn-block.mb-4(type='submit') Sign Up
                p
                  | Already have an account?
                  a.text-blue(href='/signin') Sign in
  
