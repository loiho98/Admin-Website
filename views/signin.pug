.container.d-flex.flex-column.justify-content-between.vh-100
  .row.justify-content-center.mt-5
    .col-xl-5.col-lg-6.col-md-10
      .card
        .card-header.bg-primary
          .app-brand
            a(href='/index.html')
              svg.brand-icon(xmlns='http://www.w3.org/2000/svg' preserveAspectRatio='xMidYMid' width='30' height='33' viewBox='0 0 30 33')
                g(fill='none' fill-rule='evenodd')
                  path.logo-fill-blue(fill='#7DBCFF' d='M0 4v25l8 4V0zM22 4v25l8 4V0z')
                  path.logo-fill-white(fill='#FFF' d='M11 4v25l8 4V0z')
              span.brand-name Victoria Store
        .card-body.p-5
          h4.text-dark.mb-5 Sign In
          form(action='/submit-signin' method="POST")
            .row
              .form-group.col-md-12.mb-4
                input.form-control.input-lg#email(name='email' type='email' aria-describedby='emailHelp' placeholder='Email')
              .form-group.col-md-12
                input.form-control.input-lg#password(name='password' type='password' placeholder='Password')
                if (error)
                  p#error(style='color:red;font-size:13') #Error: #{error}
                .col-md-12
                .d-flex.my-2.justify-content-between
                  .d-inline-block.mr-3
                    label.control.control-checkbox
                      | Remember me

                      input(type='checkbox')
                      .control-indicator
                  p
                    a.text-blue(href='/forgot_password') Forgot Your Password?
                button.btn.btn-lg.btn-primary.btn-block.mb-4(type='submit') Sign In
                p
                  | Don't have an account yet ?

                  a.text-blue(href='/signup') Sign Up
